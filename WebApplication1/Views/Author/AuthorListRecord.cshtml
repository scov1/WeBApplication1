@model WebApplication1.Models.Author
<tr data-note-id="@Model.Id">
    <td>
        @Html.Display(Model.AuthorName)
    </td>

    <td>
        @using (Ajax.BeginForm("Delete", new AjaxOptions() { Confirm="Delete ?", HttpMethod = "POST", OnSuccess="" }))
        {
            @Html.AntiForgeryToken()

            @Html.Hidden("Id", Model.Id)
            <input type="submit" value="Delete" class="btn btn-default" />
        }
    </td>
</tr>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
